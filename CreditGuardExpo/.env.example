# =====================================
# CreditGuard App Environment Variables
# =====================================
# Copy this file to .env and fill in your actual values

# API Configuration
API_BASE_URL=https://efx-dev.stitchcredit.com
API_TIMEOUT=10000
API_KEY= Present
API_SECRET= Present

# Authentication
JWT_SECRET=your_jwt_secret_key_here
REFRESH_TOKEN_EXPIRY=7d
ACCESS_TOKEN_EXPIRY=1h

# Credit Bureau APIs
EXPERIAN_API_KEY=your_experian_api_key
EXPERIAN_API_URL=https://sandbox-us-api.experian.com
TRANSUNION_API_KEY=your_transunion_api_key
TRANSUNION_API_URL=https://netaccess-api.transunion.com
EQUIFAX_API_KEY=your_equifax_api_key
EQUIFAX_API_URL=https://api.equifax.com

# AI Services
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000

# Analytics & Monitoring
ANALYTICS_ID=your_analytics_tracking_id
SENTRY_DSN=your_sentry_dsn_for_error_tracking
MIXPANEL_TOKEN=your_mixpanel_token

# Firebase (if using)
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id

# Stripe (for payments)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# App Configuration
APP_ENV=development
DEBUG_MODE=true
LOG_LEVEL=debug

# Security
ENCRYPTION_KEY=your_32_character_encryption_key
SALT_ROUNDS=12

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_BIOMETRIC_AUTH=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_OFFLINE_MODE=true

# Biometric Authentication
BIOMETRIC_PROMPT_TITLE="Authenticate with CreditGuard"
BIOMETRIC_PROMPT_SUBTITLE="Use your fingerprint or face to access your account"
BIOMETRIC_PROMPT_DESCRIPTION="Secure access to your credit information"

# Push Notifications
FCM_SERVER_KEY=your_fcm_server_key
APN_KEY_ID=your_apn_key_id
APN_TEAM_ID=your_apple_team_id

# Social Authentication (if implemented)
GOOGLE_CLIENT_ID=your_google_oauth_client_id
APPLE_CLIENT_ID=your_apple_signin_client_id
FACEBOOK_APP_ID=your_facebook_app_id

# Development Tools
FLIPPER_ENABLED=true
REACTOTRON_ENABLED=true
STORYBOOK_ENABLED=false

# API Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Cache Configuration
CACHE_TTL=300000
CACHE_MAX_SIZE=50

# Email Service
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@creditguard.app

# SMS Service (for 2FA)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890